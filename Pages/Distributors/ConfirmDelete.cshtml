@page
@model Dobre_Lucia_Corina_proiect.Pages.Distributors.ConfirmDeleteModel

@{
    ViewData["Title"] = "Confirm Delete Distributor";
}

<h1>Confirm Delete Distributor</h1>

<h3>Are you sure you want to delete this Distributor?</h3>
<div>
    <p>This action will delete the Distributor record. <strong>Note:</strong> The associated Distributor Products records <strong>will be automatically deleted</strong>.</p>

    <h4>Distributor Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Distributor Name</dt>
        <dd class="col-sm-10">@Model.Distributor.DistributorName</dd>
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Distributor.Address</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Distributor.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index">Cancel</a>
    </form>
</div>

@{
    var warningMessage = ViewData["WarningMessage"] as string;
}

@if (!string.IsNullOrEmpty(warningMessage))
{
    <div class="alert alert-warning">
        @warningMessage
    </div>
}

