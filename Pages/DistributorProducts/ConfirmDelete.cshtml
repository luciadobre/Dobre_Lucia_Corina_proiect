@page
@model Dobre_Lucia_Corina_proiect.Pages.DistributorProducts.ConfirmDeleteModel

@{
    ViewData["Title"] = "Confirm Delete Distributor Product";
}

<h1>Confirm Delete Distributor Product</h1>

<div class="alert alert-warning">
    <strong>Warning:</strong> Deleting this product will <strong>not</strong> affect the associated distributor.
</div>

<h4>Distributor Product Details</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Product Name</dt>
    <dd class="col-sm-10">@Model.DistributorProduct.DistributorProductName</dd>
    <dt class="col-sm-2">Type</dt>
    <dd class="col-sm-10">@Model.DistributorProduct.Type</dd>
    <dt class="col-sm-2">Quantity</dt>
    <dd class="col-sm-10">@Model.DistributorProduct.Quantity</dd>
    <dt class="col-sm-2">Buy Price</dt>
    <dd class="col-sm-10">@Model.DistributorProduct.BuyPrice</dd>
    <dt class="col-sm-2">Distributor ID</dt>
    <dd class="col-sm-10">@Model.DistributorProduct.DistributorID</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="DistributorProduct.ID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-page="./Index">Cancel</a>
</form>