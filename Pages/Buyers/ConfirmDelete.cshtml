@page
@model Dobre_Lucia_Corina_proiect.Pages.Buyers.ConfirmDeleteModel

@{
    ViewData["Title"] = "Confirm Delete Buyer";
}

<h1>Confirm Delete Buyer</h1>

<div class="alert alert-warning">
    <strong>Warning:</strong> Deleting this buyer will also <strong>permanently delete</strong> all their associated sales.
</div>

<h4>Buyer Details</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Buyer Name</dt>
    <dd class="col-sm-10">@Model.Buyer.Name</dd>
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Buyer.Email</dd>
    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.Buyer.Phone</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Buyer.ID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-page="./Index">Cancel</a>
</form>
