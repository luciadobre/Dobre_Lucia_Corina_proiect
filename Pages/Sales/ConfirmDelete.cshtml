@page
@model Dobre_Lucia_Corina_proiect.Pages.Sales.ConfirmDeleteModel

@{
    ViewData["Title"] = "Confirm Delete Sale";
}

<h1>Confirm Delete Sale</h1>

<h3>Are you sure you want to delete this Sale?</h3>
<div>
    <p>This action will delete the Sale record. <strong>Note:</strong> The associated Buyer and Product records will <strong>not</strong> be deleted.</p>

    <h4>Sale Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Quantity Sold</dt>
        <dd class="col-sm-10">@Model.Sale.Quantity</dd>
        <dt class="col-sm-2">Sale Date</dt>
        <dd class="col-sm-10">@Model.Sale.SaleDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@Model.Sale.Product.Description</dd>
        <dt class="col-sm-2">Buyer</dt>
        <dd class="col-sm-10">@Model.Sale.Buyer.Name</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Sale.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index">Cancel</a>
    </form>
</div>
