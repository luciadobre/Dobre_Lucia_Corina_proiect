@page
@model Dobre_Lucia_Corina_proiect.Pages.Products.ConfirmDeleteModel

@{
    ViewData["Title"] = "Confirm Delete Product";
}

<h1>Confirm Delete Product</h1>

<h3>Are you sure you want to delete this Product?</h3>
<div>
    <p>This action will delete the Product record. <strong>Note:</strong> Any associated Sales records and DistributorProduct relationships will <strong>not</strong> be automatically deleted.</p>

    <h4>Product Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Product Name</dt>
        <dd class="col-sm-10">@Model.Product.DistributorProductName</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Product.Description</dd>
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Product.Quantity</dd>
        <dt class="col-sm-2">Buy Price</dt>
        <dd class="col-sm-10">@Model.Product.BuyPrice</dd>
        <dt class="col-sm-2">Sell Price</dt>
        <dd class="col-sm-10">@Model.Product.SellPrice</dd>
        <dt class="col-sm-2">Buy Date</dt>
        <dd class="col-sm-10">@Model.Product.BuyDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Sell Date</dt>
        <dd class="col-sm-10">@Model.Product.SellDate.ToShortDateString()</dd>
    </dl>

    @if (Model.Product.Sale.Any())
    {
        <h4>Related Sales</h4>
        <ul>
            @foreach (var sale in Model.Product.Sale)
            {
                <li>Sale ID: @sale.ID, Quantity Sold: @sale.Quantity, Sale Date: @sale.SaleDate.ToShortDateString()</li>
            }
        </ul>
    }

    <form method="post">
        <input type="hidden" asp-for="Product.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index">Cancel</a>
    </form>
</div>
